<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Banners -->

    <style name="Banner" />

    <style name="Banner.High">
        <item name="android:layout_gravity">left|top</item>
        <item name="android:textSize">@dimen/high_banner_text_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/app_colour</item>
    </style>

    <style name="Time" parent="@android:TextAppearance.Medium">
        <item name="android:textSize">@dimen/small_banner_text_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/app_colour</item>
    </style>

    <style name="Banner.Medium">
        <item name="android:textSize">@dimen/small_banner_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/app_yellow_main</item>
    </style>

    <style name="Banner.Low">
        <item name="android:layout_gravity">left|top</item>
        <item name="android:textSize">@dimen/low_banner_text_size</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- Buttons -->

    <style name="Button" parent="android:Widget.Holo.Light.Button" />

    <style name="Button.Highlight">
        <item name="android:background">@drawable/button_highlight</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="Button.Action.Basic">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Button.Action">
        <item name="android:textColor">@color/selectable_text</item>
        <item name="android:background">@drawable/selectable_background</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/action_button_text_size</item>
    </style>

    <style name="MediaRouteButtonPlus" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:contentDescription">@string/mr_media_route_button_content_description</item>
        <item name="mrp_externalRouteEnabledDrawable">@drawable/mr_ic_media_route_holo_light</item>
    </style>

    <style name="CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/apptheme_btn_check_holo_light</item>
    </style>

    <style name="SeekBar" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/apptheme_scrubber_control_selector_holo_light</item>
    </style>

    <style name="ProgressBar" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/apptheme_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_progress_indeterminate_horizontal_holo_light</item>
    </style>

    <style name="ListView" parent="android:Widget.Holo.ListView">
        <item name="android:listSelector">@drawable/apptheme_list_selector_holo_light</item>
    </style>

    <style name="SpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="EditText" parent="android:Widget.Holo.EditText">
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/app_colour</item>
        <item name="android:textColorHint">@color/app_colour_60</item>
        <item name="android:background">@drawable/edittext</item>
    </style>

</resources>