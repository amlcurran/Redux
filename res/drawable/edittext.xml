<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="1dp" />
            <padding
                android:bottom="2dp" />
            <stroke
                android:color="@color/app_yellow_main"
                android:width="2dp" />

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="1dp" />
            <padding
                android:bottom="4dp"
                android:left="12dp"
                android:right="12dp"
                android:top="4dp" />
            <stroke
                android:color="@color/app_colour"
                android:width="2dp" />
            <solid android:color="@color/app_colour_20" />

        </shape>
    </item>

</layer-list>