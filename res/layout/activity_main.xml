<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_host"
        android:animateLayoutChanges="true"
        android:padding="@dimen/default_padding"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bbc_redux"
            android:id="@+id/high_banner"
            style="@style/Banner.High"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/media_route_button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/low_banner"
            style="@style/Banner.Low"
            android:visibility="invisible"
            android:layout_below="@+id/high_banner"
            android:layout_toLeftOf="@+id/media_route_button" />

        <view
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom"
            class="com.espiandev.redux.cast.mediarouterplus.MediaRouteButtonPlus"
            style="@style/Theme.MediaRouter.Light"
            android:id="@+id/media_route_button"
            android:layout_alignBottom="@+id/high_banner"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/host_frame"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_host"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:gravity="right"
        android:background="#99FFFFFF">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preferences"
            android:id="@+id/button_preferences"
            style="@style/Button.Action"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />
    </LinearLayout>

</RelativeLayout>